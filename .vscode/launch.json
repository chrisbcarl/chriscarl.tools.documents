    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
        },
        {
            // https://stackoverflow.com/questions/61701704/vs-code-c-debugging
            // https://code.visualstudio.com/docs/cpp/launch-json-reference
            // https://stackoverflow.com/a/66541333
            "name": "g++.exe - build and debug active",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/dist/${fileBasenameNoExtension}",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            // "MIMode": "gdb",
            // "miDebuggerPath": "C:\\ProgramData\\mingw64\\mingw64\\bin\\g++.exe",
            "setupCommands": [
                {
                    "description": "enable pretty print",
                    "text": "--enable-pretty-printing",
                    "ignoreFailures": true,
                }
            ],
            "preLaunchTask": "C/C++: g++ build active file",
        },
        {
            "name": "[md2pdf]",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/chriscarl/tools/md2pdf.py",
            "console": "integratedTerminal",
